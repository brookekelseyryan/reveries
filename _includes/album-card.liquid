<div class='o-grid__col'>

  <a href='{{ post.url | prepend: site.baseurl }}' class='c-post-card {% if forloop.first == true %} c-post-card--first {% endif %} {% if forloop.last == true %} c-post-card--last {% endif %}'>
    <h3 class='c-post-card__title'>{{ post.date | date: '%B %d, %Y' }}</h3>

    {% for image in site.static_files %}
      {% if image.path contains post.album %}
        <img src="{{ site.baseurl }}{{ image.path }}" alt="image" />
        <hr>
      {% endif %}
    {% endfor %}

    {% comment %}<p class='c-post-card__excerpt u-font-medium'>{% endcomment %}
      {% comment %}{{ post.content | strip_html | truncatewords:35 }}{% endcomment %}
    {% comment %}</p>{% endcomment %}

    <p class='c-post-card__date'>{{ post.location }}</p>
  </a>

</div>